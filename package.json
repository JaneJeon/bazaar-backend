    "axios": "^0.19.0",
    "bull": "^3.7.0",
    "cors": "^2.8.5",
    "dayjs": "^1.8.16",
    "db-errors": "^0.2.3",
    "debug": "^4.1.1",
    "dinero.js": "^1.6.0",
    "dotenv-defaults": "^1.0.2",
    "express": "^4.16.4",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^5.3.1",
    "express-rate-limit": "^5.0.0",
    "express-ws": "^4.0.0",
    "helmet": "^3.20.1",
    "http-assert": "^1.4.0",
    "ioredis": "^4.14.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.2",
    "lodash": "^4.17.15",
    "multer": "^1.4.2",
    "normalize-email": "^1.1.1",
    "objection": "^1.6.6",
