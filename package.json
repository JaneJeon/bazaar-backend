    "pluralize": "^8.0.0",
    "pm2": "^3.5.1",
    "querystring": "^0.2.0",
    "rate-limit-redis": "^1.6.0",
    "sharp": "^0.23.0",
    "stripe": "^7.8.0",
    "uid-safe": "^2.1.5",
    "ulid": "^2.3.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.1",
    "utf-8-validate": "^5.0.2"
  },
  "devDependencies": {
    "faker": "^4.1.0",
    "husky": "^3.0.5",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "pino-pretty": "^3.2.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2"
  },
  "prettier": {
    "semi": false
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn && yarn rollback && yarn migrate",
      "pre-commit": "prettier --write '**/*.js'",
      "pre-push": "yarn test"
    }
  }
}
